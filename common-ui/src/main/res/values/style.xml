<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentAppBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize the colors as needed -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <!-- Add your desired margin here, adjust the values as needed -->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">70dp</item>
    </style>

    <style name="toolbarSubTitle">
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ... other attributes ... -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <!-- Customize the size of the overflow menu -->
        <item name="android:maxWidth">300dp</item>
    </style>
</resources>