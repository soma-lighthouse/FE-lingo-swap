<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/auth_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/countryFragment"
        android:name="com.lighthouse.auth.fragment.CountryFragment"
        tools:layout="@layout/fragment_country" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.lighthouse.auth.fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_termFragment"
            app:destination="@id/termFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/termFragment"
        android:name="com.lighthouse.auth.fragment.TermFragment"
        tools:layout="@layout/fragment_term">
        <action
            android:id="@+id/action_termFragment_to_interestFragment"
            app:destination="@id/interestFragment" />
    </fragment>

    <fragment
        android:id="@+id/interestFragment"
        android:name="com.lighthouse.auth.fragment.InterestListFragment"
        tools:layout="@layout/fragment_interest">
        <action
            android:id="@+id/action_interestFragment_to_countryFragment"
            app:destination="@id/countryFragment" />

        <deepLink
            android:id="@+id/deepLink"
            android:autoVerify="true"
            app:uri="https://lingoswap.net/interests?isRegister={isRegister}" />

        <argument
            android:name="isRegister"
            android:defaultValue="true"
            app:argType="boolean" />


    </fragment>

</navigation>